<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="SoftwareTesting.Pages.Experiments.Sales.BasicPage3"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Select a file" Style="{StaticResource Heading2}" />
                <TextBlock Text="Content goes here" />
                <TextBox x:Name="textBox" Height="25" TextWrapping="Wrap" Text="File Path"/>
                <Button Width="100" Height="30" Content="Select File" Click="ButtonBase_OnClick"/>
                <Button Width="100" Height="30" Content="Commit" Click="File_Parse"/>
               

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
