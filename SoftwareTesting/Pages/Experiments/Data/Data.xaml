<UserControl x:Class="SoftwareTesting.Pages.Experiments.Data.Data"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:dataPresenter="http://infragistics.com/DataPresenter"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel MinWidth="200">
                <TextBlock Text="Result" Style="{StaticResource Heading2}" />



                <dataPresenter:XamDataGrid Name="dataGrid" Theme="Metro"/>



            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
